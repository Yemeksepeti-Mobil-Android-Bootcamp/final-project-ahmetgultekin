<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottomNavigation.account.saveAddress.SaveAddressFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addNewAddress"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter new address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newAddressTextField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textLongMessage"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/savedAddressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addNewAddress"
        app:layout_constraintTop_toBottomOf="@+id/addNewAddress"
        android:backgroundTint="@color/bold_green" />

</androidx.constraintlayout.widget.ConstraintLayout>